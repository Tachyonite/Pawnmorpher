<Defs xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../Schemas/MutationDef.xsd">
	<Pawnmorph.Hediffs.MutationDef ParentName="ComboPartBase">
		<defName>EtherComboHornbill</defName>
		<label>hornbill</label>
		<description>Horns and beak have fused into one bony monstrosity of a maw, that runs up the skull and leaves only small holes for sight.</description>
		<parts>
			<li>Skull</li>
		</parts>
		<classInfluence>Avian</classInfluence>
		<blockSites>
			<li>Jaw</li>
		</blockSites>
		<stages>
			<li Class="Pawnmorph.Hediffs.MutationStage">
				<capMods>
					<li>
						<capacity>Talking</capacity>
						<offset>-0.20</offset>
					</li>
					<li>
						<capacity>Eating</capacity>
						<offset>0.40</offset>
					</li>
					<li>
						<capacity>Sight</capacity>
						<offset>-0.10</offset>
					</li>
				</capMods>
			</li>
		</stages>
		<comps>
			<li Class="HediffCompProperties_VerbGiver">
				<tools>
					<li>
						<label>beak</label>
						<labelUsedInLogging>False</labelUsedInLogging>
						<capacities>
							<li>Bite</li>
						</capacities>
						<power>7</power>
						<cooldownTime>2</cooldownTime>
						<alwaysTreatAsWeapon>true</alwaysTreatAsWeapon>
					</li>
					<li>
						<label>horns</label>
						<labelUsedInLogging>False</labelUsedInLogging>
						<capacities>
							<li>Stab</li>
							<li>Blunt</li>
						</capacities>
						<power>5</power>
						<cooldownTime>0.5</cooldownTime>
						<alwaysTreatAsWeapon>true</alwaysTreatAsWeapon>
					</li>
				</tools>
			</li>
		</comps>
	</Pawnmorph.Hediffs.MutationDef>
	<Pawnmorph.Hediffs.MutationDef ParentName="ComboPartBase">
		<defName>EtherComboWolfSpike</defName>
		<label>wolfspike</label>
		<description>The iguana horns have spread over this lupine muzzle, covering it partly in scales and giving it a particularly sharp point.</description>
		<parts>
			<li>Skull</li>
		</parts>
		<blockSites>
			<li>Jaw</li>
		</blockSites>
		<classInfluence>Wolf</classInfluence>
		<stages>
			<li Class="Pawnmorph.Hediffs.MutationStage">
				<capMods>
					<li>
						<capacity>Talking</capacity>
						<offset>-0.10</offset>
					</li>
					<li>
						<capacity>Eating</capacity>
						<offset>0.40</offset>
					</li>
					<li>
						<capacity>Sight</capacity>
						<offset>-0.10</offset>
					</li>
				</capMods>
			</li>
		</stages>
		<comps>
			<li Class="HediffCompProperties_VerbGiver">
				<tools>
					<li>
						<label>teeth</label>
						<labelUsedInLogging>False</labelUsedInLogging>
						<capacities>
							<li>Bite</li>
						</capacities>
						<power>10.0</power>
						<cooldownTime>1.5</cooldownTime>
						<alwaysTreatAsWeapon>true</alwaysTreatAsWeapon>
					</li>
					<li>
						<label>horns</label>
						<labelUsedInLogging>False</labelUsedInLogging>
						<capacities>
							<li>Stab</li>
							<li>Blunt</li>
						</capacities>
						<power>5</power>
						<cooldownTime>0.5</cooldownTime>
						<alwaysTreatAsWeapon>true</alwaysTreatAsWeapon>
					</li>
				</tools>
			</li>
		</comps>
	</Pawnmorph.Hediffs.MutationDef>
</Defs>

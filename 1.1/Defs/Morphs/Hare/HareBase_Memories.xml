<Defs xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../Schemas/ThoughtDef.xsd">
    <ThoughtDef ParentName="OutlookMemoryBase">
		<defName>HareTransformationMemory</defName>
        <stages>
            <li>
                <label>changed</label>
                <description>My dentist is gonna hate this.</description>
                <baseMoodEffect>-3</baseMoodEffect>
            </li>
            <li>
                <label>changed</label>
                <description>Grass tastes so much better now for some reason.</description>
                <baseMoodEffect>+3</baseMoodEffect>
            </li>
            <li>
                <label>changed</label>
                <description>My teeth, they're so big! Gross!</description>
                <baseMoodEffect>-5</baseMoodEffect>
            </li>
            <li>
                <label>changed</label>
                <description>Nice, but imagine being picked up and hugged.</description>
                <baseMoodEffect>+1</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>

    <ThoughtDef ParentName="OutlookMemoryBase">
		<defName>HareRevertedMemory</defName>
        <stages>
            <li>
                <label>reverted</label>
                <description>Phew, those ears were getting in the way.</description>
                <baseMoodEffect>3</baseMoodEffect>
            </li>
            <li>
                <label>reverted</label>
                <description>Eugh, grass tastes gross again, no thank you!</description>
                <baseMoodEffect>-3</baseMoodEffect>
            </li>
            <li>
                <label>reverted</label>
                <description>MY TEETH ARE NORMAL AGAIN! REJOICE!</description>
                <baseMoodEffect>10</baseMoodEffect>
            </li>
            <li>
                <label>reverted</label>
                <description>No soft hugs for me.</description>
                <baseMoodEffect>-5</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>

    <ThoughtDef ParentName="OutlookMemoryBase">
        <durationDays>1</durationDays>
        <defName>EtherHareJaw</defName>
        <stages>
            <li>
                <label>Rabbit face</label>
                <description>These whiskers and teeth are dumb.</description>
                <visible>true</visible>
                <baseMoodEffect>-1</baseMoodEffect>
            </li>
            <li>
                <label>Rabbit face</label>
                <description>Check out my cute little button nose, I love it!</description>
                <visible>true</visible>
                <baseMoodEffect>3</baseMoodEffect>
            </li>
            <li>
                <label>Rabbit face</label>
                <description>I wasn't eating a leaf, you didn't see that!</description>
                <visible>true</visible>
                <baseMoodEffect>-2</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>
    <ThoughtDef ParentName="OutlookMemoryBase">
        <durationDays>1</durationDays>
        <defName>EtherHareEar</defName>
        <stages>
            <li>
                <label>Rabbit ears</label>
                <description>This has been one bad magic trick.</description>
                <visible>true</visible>
                <baseMoodEffect>-1</baseMoodEffect>
            </li>
            <li>
                <label>Rabbit ears</label>
                <description>They're so cute, it's like I belong in a Playboy!</description>
                <visible>true</visible>
                <baseMoodEffect>3</baseMoodEffect>
            </li>
            <li>
                <label>Rabbit ears</label>
                <description>These ears keep getting in the way!</description>
                <visible>true</visible>
                <baseMoodEffect>-2</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>
    <ThoughtDef ParentName="OutlookMemoryBase">
        <durationDays>1</durationDays>
        <defName>EtherHareTail</defName>
        <stages>
            <li>
                <label>Cotton tail</label>
                <description>Small and puffy.</description>
                <visible>true</visible>
                <baseMoodEffect>0</baseMoodEffect>
            </li>
            <li>
                <label>Cotton tail</label>
                <description>Soft!</description>
                <visible>true</visible>
                <baseMoodEffect>2</baseMoodEffect>
            </li>
            <li>
                <label>Cotton tail</label>
                <description>No, stop asking if I stole the carrots!</description>
                <visible>true</visible>
                <baseMoodEffect>-4</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>

</Defs>

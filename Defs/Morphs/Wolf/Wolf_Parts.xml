<Defs>
	<Pawnmorph.Hediffs.MutationDef Name="WolfPart" ParentName="PawnmorphPart" Abstract="True">
		<morphInfluence>WolfMorph</morphInfluence>
	</Pawnmorph.Hediffs.MutationDef>

	<Pawnmorph.Hediffs.MutationDef ParentName="WolfPart">
		<defName>EtherWolfMuzzle</defName>
		<label>wolf muzzle</label>
		<description>A snout graces [PAWN_nameDef]'s face, like that of a great canine. [PAWN_pronoun] teeth are pointed to suit, and this makes speaking more difficult, yet eating is easier.</description>
		<stages>
			<li>
				<capMods>
					<li>
						<capacity>Talking</capacity>
						<offset>-0.50</offset>
					</li>
					<li>
						<capacity>Eating</capacity>
						<offset>0.50</offset>
					</li>
				</capMods>
			</li>
			<li>
				<minSeverity>1</minSeverity>
				<label>adapted</label>
				<capMods>
					<li>
						<capacity>Talking</capacity>
						<offset>-0.1</offset>
					</li>
					<li>
						<capacity>Eating</capacity>
						<offset>0.50</offset>
					</li>
				</capMods>
			</li>
		</stages>
		<comps>
			<li Class="HediffCompProperties_VerbGiver">
				<tools>
					<li>
						<label>teeth</label>
						<labelUsedInLogging>False</labelUsedInLogging>
						<capacities>
							<li>Bite</li>
						</capacities>
						<power>10.0</power>
						<cooldownTime>1.5</cooldownTime>
						<alwaysTreatAsWeapon>true</alwaysTreatAsWeapon>
					</li>
				</tools>
			</li>
			<li Class="Pawnmorph.Hediffs.CompProperties_MutationSeverityAdjust">
				<severityPerDay>0.25</severityPerDay>
			</li>
		</comps>
		<parts>
			<li>Jaw</li>
		</parts>
		<countToAffect>1</countToAffect>
		<categories>
			<li>Major</li>
		</categories>
	</Pawnmorph.Hediffs.MutationDef>

	<Pawnmorph.Hediffs.MutationDef ParentName="WolfPart">
		<defName>EtherWolfEar</defName>
		<label>lupine</label>
		<description>Two pointed and furred ears crown [PAWN_nameDef]'s head, as they flick left and right, listening for the sounds of prey.</description>
		<stages>
			<li>
				<partEfficiencyOffset>0.2</partEfficiencyOffset>
			</li>
		</stages>
		<parts>
			<li>Ear</li>
		</parts>
		<countToAffect>2</countToAffect>
		<categories>
			<li>Major</li>
		</categories>
	</Pawnmorph.Hediffs.MutationDef>

	<Pawnmorph.Hediffs.MutationDef ParentName="WolfPart">
		<defName>EtherWolfTail</defName>
		<label>wolfish tail</label>
		<description>A grey wolf-like tail hangs from [PAWN_nameDef]'s spine, alert and waiting for a hunt.</description>
		<stages>
			<li>
				<capMods>
					<li>
						<capacity>Moving</capacity>
						<offset>0.01</offset>
					</li>
				</capMods>
			</li>
		</stages>
		<parts>
			<li>Tail</li>
		</parts>
		<countToAffect>1</countToAffect>
		<categories>
			<li>Major</li>
		</categories>
	</Pawnmorph.Hediffs.MutationDef>
</Defs>
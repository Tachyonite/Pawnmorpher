<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <HediffDef Abstract="True" ParentName="PawnmorphPart" Name="ThrumboPart">
    <comps>
      <li Class="Pawnmorph.Hediffs.CompProperties_MorphInfluence">
        <morph>ThrumboMorph</morph>
      </li>
    </comps>
  </HediffDef>


  <HediffDef ParentName="ThrumboPart">
    <defName>EtherThrumboSnout</defName>
    <label>thrumbo snout</label>
    <description>A snout graces [PAWN_nameDef]'s face, luxuriously fluffy and inspiring a commanding gaze.</description>
    <stages>
      <li>
        <capMods>
          <li>
            <capacity>Talking</capacity>
            <offset>-0.20</offset>
          </li>
          <li>
            <capacity>Eating</capacity>
            <offset>0.20</offset>
          </li>
        </capMods>
      </li>
    </stages>
    <comps>
      <li Class="HediffCompProperties_VerbGiver">
        <tools>
          <li>
            <label>teeth</label>
            <labelUsedInLogging>False</labelUsedInLogging>
            <capacities>
              <li>Bite</li>
            </capacities>
            <power>15.0</power>
            <cooldownTime>1.5</cooldownTime>
            <alwaysTreatAsWeapon>true</alwaysTreatAsWeapon>
          </li>
        </tools>
      </li>
    </comps>
  </HediffDef>

  <HediffDef ParentName="ThrumboPart">
    <defName>EtherThrumboEar</defName>
    <label>thrumbic</label>
    <stages>
      <li>
        <partEfficiencyOffset>0.05</partEfficiencyOffset>
      </li>
    </stages>
  </HediffDef>

  <HediffDef ParentName="ThrumboPart">
    <defName>EtherThrumboTail</defName>
    <label>thrumbo tail</label>
    <description>A fluffy thrumbo tail, coated in supple, sleek fur.</description>
    <stages>
      <li>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>0.01</offset>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>

  <HediffDef ParentName="ThrumboPart">
    <defName>EtherThrumboHorn</defName>
    <label>thrumbohorn</label>
    <description>A razor-sharp thrumbo horn decorates [PAWN_nameDef]'s head.</description>
    <comps>
      <li Class="HediffCompProperties_VerbGiver">
        <tools>
          <li>
            <label>point</label>
            <capacities>
              <li>Scratch</li>
              <li>Stab</li>
            </capacities>
            <power>28</power>
            <cooldownTime>2.6</cooldownTime>
          </li>
          <li>
            <label>base</label>
            <capacities>
              <li>Blunt</li>
            </capacities>
            <power>9</power>
            <cooldownTime>2</cooldownTime>
          </li>
        </tools>
      </li>
    </comps>
    <spawnThingOnRemoved>ThrumboHorn</spawnThingOnRemoved>
  </HediffDef>
</Defs>
<Defs xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../Schemas/ThoughtDef.xsd">
	<ThoughtDef ParentName="OutlookMemoryBase">
		<defName>DonkeyTransformationMemory</defName>
		<stages>
			<li>
				<label>changed</label>
				<description>I'm feeling really stubborn, and I don't want to talk to you!</description>
				<baseMoodEffect>-3</baseMoodEffect>
			</li>
			<li>
				<label>changed</label>
				<description>My back has never been stronger!</description>
				<baseMoodEffect>3</baseMoodEffect>
			</li>
			<li>
				<label>changed</label>
				<description>My voice sounds HEE-HAWWrible!</description>
				<baseMoodEffect>-5</baseMoodEffect>
			</li>
			<li>
				<label>changed</label>
				<description>This is awesome, I want to try pulling a cart like this.</description>
				<baseMoodEffect>1</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

	<ThoughtDef ParentName="OutlookMemoryBase">
		<defName>DonkeyRevertedMemory</defName>
		<stages>
			<li>
				<label>reverted</label>
				<description>I can speak properly again... phew.</description>
				<baseMoodEffect>3</baseMoodEffect>
			</li>
			<li>
				<label>reverted</label>
				<description>I feel so weak and feeble.</description>
				<baseMoodEffect>-3</baseMoodEffect>
			</li>
			<li>
				<label>reverted</label>
				<description>My voice is normal again!</description>
				<baseMoodEffect>10</baseMoodEffect>
			</li>
			<li>
				<label>reverted</label>
				<description>Aw, but I liked being that way.</description>
				<baseMoodEffect>-5</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
</Defs>

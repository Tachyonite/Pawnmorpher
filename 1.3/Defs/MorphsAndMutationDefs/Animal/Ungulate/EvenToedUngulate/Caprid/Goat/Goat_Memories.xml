<Defs xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../Schemas/ThoughtDef.xsd">
	<ThoughtDef ParentName="OutlookMemoryBase">
		<defName>GoatTransformationMemory</defName>
		<stages>
			<li>
				<label>changed</label>
				<description>Even my meal trays look delicious now...</description>
				<baseMoodEffect>-3</baseMoodEffect>
			</li>
			<li>
				<label>changed</label>
				<description>I have a maaaaaarvelous voice!</description>
				<baseMoodEffect>3</baseMoodEffect>
			</li>
			<li>
				<label>changed</label>
				<description>Help mee-eee-eh!</description>
				<baseMoodEffect>-5</baseMoodEffect>
			</li>
			<li>
				<label>changed</label>
				<description>I'm still on two legs, so I'm not truly the GOAT.</description>
				<baseMoodEffect>1</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

	<ThoughtDef ParentName="OutlookMemoryBase">
		<defName>GoatRevertedMemory</defName>
		<stages>
			<li>
				<label>reverted</label>
				<description>I can speak without a bleat now, thankfully.</description>
				<baseMoodEffect>3</baseMoodEffect>
			</li>
			<li>
				<label>reverted</label>
				<description>But I wanted to be the goat!</description>
				<baseMoodEffect>-3</baseMoodEffect>
			</li>
			<li>
				<label>reverted</label>
				<description>Thank Randy, I no longer smell terrible all the time.</description>
				<baseMoodEffect>10</baseMoodEffect>
			</li>
			<li>
				<label>reverted</label>
				<description>But I REALLY wanted to be the goat!</description>
				<baseMoodEffect>-5</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
</Defs>

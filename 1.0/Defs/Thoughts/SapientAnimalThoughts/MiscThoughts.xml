<Defs xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../Schemas/ThoughtDef.xsd">
   
    <ThoughtDef>
        <defName>SapientAnimalSleptOnGround</defName>
        <durationDays>1</durationDays>
        <stages>
            <li>
                <label>slept on ground</label>
                <description>I don't even have a pillow anymore, I have to sleep on the ground!</description>
                <baseMoodEffect>-4</baseMoodEffect> <!-- need to remember to set these >.> -->
            </li>
        </stages>
        <modExtensions>
            <li Class="Pawnmorph.DefExtensions.FormerHumanRestriction"> <!-- this thought is now only valid for sapient animals -->
            </li>
        </modExtensions>
    </ThoughtDef>
	

<?xml version="1.0" encoding="UTF-8" ?>
<Defs>
	
	<!-- Chitchat -->
	<Pawnmorph.Social.PMInteractionDef Name="PMAnimalNoise_Chitchat" Abstract="true">
		<workerClass>Pawnmorph.Social.InteractionWorker_Chitchat</workerClass>
		<initiatorXpGainSkill>Social</initiatorXpGainSkill>
		<initiatorXpGainAmount>4</initiatorXpGainAmount>
	</Pawnmorph.Social.PMInteractionDef>
	
	<ThoughtDef Name="PMAnimalNoise_ChitchatMemory" Abstract="true">
		<thoughtClass>Thought_MemorySocialCumulative</thoughtClass>
		<stackLimit>300</stackLimit>
		<maxCumulatedOpinionOffset>10</maxCumulatedOpinionOffset>
		<nullifyingTraits>
			<li>Psychopath</li>
		</nullifyingTraits>
	</ThoughtDef>
	
	
	<!-- Deep talk -->
	<Pawnmorph.Social.PMInteractionDef Name="PMAnimalNoise_DeepTalk" Abstract="true">
		<workerClass>Pawnmorph.Social.InteractionWorker_DeepTalk</workerClass>
		<symbol>Things/Mote/SpeechSymbols/DeepTalk</symbol>
		<initiatorXpGainSkill>Social</initiatorXpGainSkill>
		<initiatorXpGainAmount>10</initiatorXpGainAmount>
	</Pawnmorph.Social.PMInteractionDef>
	
	<ThoughtDef Name="PMAnimalNoise_DeepTalkMemory" Abstract="true">
		<thoughtClass>Thought_MemorySocial</thoughtClass>
		<durationDays>20</durationDays>
		<stackLimit>300</stackLimit>
		<stackLimitForSameOtherPawn>10</stackLimitForSameOtherPawn>
		<stackedEffectMultiplier>0.9</stackedEffectMultiplier>
		<nullifyingTraits>
			<li>Psychopath</li>
		</nullifyingTraits>
	</ThoughtDef>
	
	

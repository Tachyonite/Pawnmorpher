        <thoughtClass>Pawnmorph.Thoughts.Thought_RelatedFormerHuman_Rejected</thoughtClass>
        <durationDays>15</durationDays>
        <stackLimit>10</stackLimit>
        <showBubble>true</showBubble>
        <stackLimitForSameOtherPawn>1</stackLimitForSameOtherPawn>
        <nullifyingTraits>
            <li>Psychopath</li>
        </nullifyingTraits>
    </ThoughtDef>

    <!-- Very close family members, e.g. children, spouses -->
    <ThoughtDef ParentName="PM_FormerHumanRelatedRejected">
        <defName>PMFormerHumanRejected_VeryClose</defName>
        <stages>
            <li>
                <label>relative {0} turned away</label>
                <description>A close relative of mine was turned into an animal and came to us for help, but the colony just left them out in the wild!</description>
                <baseMoodEffect>-10</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>
    
    <!-- Close family members, e.g. lovers, parents, siblings -->

<Defs>
    <!--================================= Accepted =================================-->
    <ThoughtDef Name="PM_FormerHumanRelatedAccepted" Abstract="True">
        <thoughtClass>Pawnmorph.Thoughts.Thought_RelatedFormerHuman_Accepted</thoughtClass>
        <durationDays>10</durationDays>
        <stackLimit>10</stackLimit>
        <showBubble>true</showBubble>
        <stackLimitForSameOtherPawn>1</stackLimitForSameOtherPawn>
        <nullifyingTraits>
            <li>Psychopath</li>
        </nullifyingTraits>
    </ThoughtDef>

    <!-- Very close family members, e.g. children, spouses -->
    <ThoughtDef ParentName="PM_FormerHumanRelatedAccepted">
        <defName>PMFormerHumanAccepted_VeryClose</defName>
        <stages>
            <li>
                <label>relative {0} helped</label>
                <description>A close relative of mine was turned into an animal and came to us for help. I'm glad we took them in.</description>
                <baseMoodEffect>6</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>
    
    <!-- Close family members, e.g. lovers, parents, siblings -->
    <ThoughtDef ParentName="PM_FormerHumanRelatedAccepted">
        <defName>PMFormerHumanAccepted_Close</defName>
        <stages>
            <li>
                <label>relative {0} helped</label>
                <description>A close relative of mine was turned into an animal and came to us for help. I'm glad we took them in.</description>
                <baseMoodEffect>4</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>
    
    <!-- Moderate family members, e.g. grandparents/children, aunts/uncles -->
    <ThoughtDef ParentName="PM_FormerHumanRelatedAccepted">
        <defName>PMFormerHumanAccepted_Moderate</defName>
        <stages>
            <li>
                <label>relative {0} helped</label>

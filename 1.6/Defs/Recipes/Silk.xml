        <fixedIngredientFilter>
            <thingDefs>
                <li>MechaniteSlurry</li>
            </thingDefs>
        </fixedIngredientFilter>
        <products>
            <PM_Hazsilk>40</PM_Hazsilk>
        </products>
        <researchPrerequisite>AdvancedExtraction</researchPrerequisite>
        <skillRequirements>
            <Crafting>3</Crafting>
        </skillRequirements>
        <workSkill>Crafting</workSkill>

    <ThoughtDef ParentName="OutlookMemoryBase">
		<defName>GooseTransformationMemory</defName>
        <stages>
            <li>
                <label>morphed</label>
                <description>I'm- HONK! covered in feathers- HONK!</description>
                <baseMoodEffect>-3</baseMoodEffect>
            </li>
            <li>
              <label>morphed</label>
                <description>I think I could tie up this look with a red bow around my neck.</description>
                <baseMoodEffect>+3</baseMoodEffect>
            </li>
            <li>
              <label>morphed</label>
                <description>Change me back! I- HONK! -ing hate geese!</description>
                <baseMoodEffect>-5</baseMoodEffect>
            </li>
            <li>
              <label>morphed</label>

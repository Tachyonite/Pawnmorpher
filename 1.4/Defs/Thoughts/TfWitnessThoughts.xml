<Defs>
    <ThoughtDef ParentName="OutlookMemoryBase" Name="PM_WitnessedTfBase" Abstract="true">
        <icon>Things/Mote/ThoughtSymbol/Skull</icon>
        <showBubble>true</showBubble>
        <durationDays>2</durationDays>
        <stackLimit>5</stackLimit>
    </ThoughtDef>

    <ThoughtDef ParentName="PM_WitnessedTfBase">
        <durationDays>1</durationDays>
        <defName>PM_WitnessedAllyTf</defName>
        <stages>
            <li>
                <!-- normal pawns -->
                <label>witnessed ally transformation</label>
                <description>It's still them, but the change is slightly offputting.</description>
                <visible>true</visible>
                <baseMoodEffect>-1</baseMoodEffect>
            </li>
            <li>
                <!-- mutation affinity -->
                <label>witnessed ally transformation</label>
                <description>Yes, another one to join us...</description>
                <visible>true</visible>
                <baseMoodEffect>3</baseMoodEffect>
            </li>
            <li>
                <!-- body purist -->
                <label>witnessed ally transformation</label>
                <description>That was horrific to watch, we're doing these insane experiments on our own people!</description>
                <visible>true</visible>
                <baseMoodEffect>-5</baseMoodEffect>
            </li>
            <li>
                <!-- primal wish -->
                <label>witnessed ally transformation</label>
                <description>God I wish that were me.</description>
                <visible>true</visible>
                <baseMoodEffect>-3</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>

<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Animals Expanded â€” Livestock</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="Human"]/alienRace/generalSettings/alienPartGenerator/bodyAddons/li[bodyPart="Jaw"]/hediffGraphics</xpath>
					<value>
						<EtherSheepSnout>Parts/sheepface/sheepface</EtherSheepSnout>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="Human"]/alienRace/generalSettings/alienPartGenerator/bodyAddons/li[bodyPart="Ear"]/hediffGraphics</xpath>
					<value>
						<EtherSheepEar>Parts/sheepface/sheepears</EtherSheepEar>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="Human"]/alienRace/generalSettings/alienPartGenerator/bodyAddons/li[bodyPart="Tail" and layerOffset=-0.29]/hediffGraphics</xpath>
					<value>
						<EtherSheepTail>Parts/sheepface/sheeptail</EtherSheepTail>
					</value>
				</li>
				
				<!-- Defs -->
				<li Class="PatchOperationAdd">
					<xpath>Defs</xpath>
					<value>
						<!-- Morph Reaction -->
						<ThoughtDef>
							<defName>EtherReactionSheepTF</defName>
							<workerClass>ThoughtWorker_Hediff</workerClass>
							<hediff>PawnmorphSheepTF</hediff>
							<stages>
								<li>
									<label>changed</label>
									<description>B...baa-aaaaa?</description>
									<baseMoodEffect>-3</baseMoodEffect>
								</li>
								<li>
									<label>feeling odd</label>
									<description>I feel like I should be grazing a field...or sticking to a herd.</description>
									<baseMoodEffect>-5</baseMoodEffect>
								</li>
							</stages>
						</ThoughtDef>
						
						<!-- Morph Def -->
						<Pawnmorph.MorphDef ParentName="SensitiveFoodMorph">
							<defName>SheepMorph</defName>
							<label>sheepmorph</label>
							<race>AEXP_Sheep</race>
							<categories>
								<li>Farm</li>
							</categories>
						</Pawnmorph.MorphDef>
						
						<!--Full TF-->
						<HediffDef ParentName="MorphParent">
							<defName>PawnmorphSheepTF</defName>
							<label>sheepmorph</label>
							<stages>
								<li>
									<label>reeling</label>
									<hungerRateFactor>1.6</hungerRateFactor>
									<painOffset>0.05</painOffset>
									<capMods>
										<li>
											<capacity>Moving</capacity>
											<offset>-0.05</offset>
										</li>
									</capMods>
									<hediffGivers>
										<li Class="Pawnmorph.HediffGiver_TF">
											<hediff>TransformedHuman</hediff>
											<pawnkinds>
												<li>AEXP_Sheep</li>
											</pawnkinds>
											<tale>TransformationMisc</tale>
										</li>
									</hediffGivers>
								</li>
								<li>
									<label>transforming</label>
									<minSeverity>0.6</minSeverity>
									<painOffset>0.1</painOffset>
									<vomitMtbDays>1</vomitMtbDays>
									<capMods>
										<li>
											<capacity>Moving</capacity>
											<offset>-0.05</offset>
										</li>
										<li>
											<capacity>Sight</capacity>
											<offset>-0.05</offset>
										</li>
										<li>
											<capacity>Manipulation</capacity>
											<offset>-0.05</offset>
										</li>
									</capMods>
								</li>
								<li>
									<label>changing</label>
									<minSeverity>0.65</minSeverity>
									<painOffset>0.1</painOffset>
									<vomitMtbDays>1</vomitMtbDays>
									<capMods>
										<li>
											<capacity>Moving</capacity>
											<offset>-0.05</offset>
										</li>
										<li>
											<capacity>Sight</capacity>
											<offset>-0.05</offset>
										</li>
										<li>
											<capacity>Manipulation</capacity>
											<offset>-0.05</offset>
										</li>
									</capMods>
									<hediffGivers>
										<li Class="Pawnmorph.HediffGiver_Mutation">
											<hediff>EtherSheepSnout</hediff>
											<mtbDays>0.5</mtbDays>
											<partsToAffect>
												<li>Jaw</li>
											</partsToAffect>
										</li>
										<li Class="Pawnmorph.HediffGiver_Mutation">
											<hediff>EtherSheepEar</hediff>
											<mtbDays>1</mtbDays>
											<partsToAffect>
												<li>Ear</li>
											</partsToAffect>
											<countToAffect>2</countToAffect>
										</li>
										<li Class="Pawnmorph.HediffGiver_Mutation">
											<hediff>EtherSheepTail</hediff>
											<mtbDays>1</mtbDays>
											<partsToAffect>
												<li>Tail</li>
											</partsToAffect>
											<tale>GrewTail</tale>
										</li>
										<li Class="Pawnmorph.HediffGiver_Mutation">
											<hediff>EtherFurredLimb</hediff>
											<mtbDays>2</mtbDays>
											<partsToAffect>
												<li>Arm</li>
											</partsToAffect>
											<countToAffect>2</countToAffect>
										</li>
										<li Class="Pawnmorph.HediffGiver_Mutation">
											<hediff>EtherHoofHand</hediff>
											<mtbDays>3</mtbDays>
											<chance>5</chance>
											<partsToAffect>
												<li>Hand</li>
											</partsToAffect>
											<countToAffect>2</countToAffect>
										</li>
										<li Class="Pawnmorph.HediffGiver_Mutation">
											<hediff>EtherDigitigradeLeg</hediff>
											<mtbDays>2</mtbDays>
											<partsToAffect>
												<li>Leg</li>
											</partsToAffect>
											<countToAffect>2</countToAffect>
											<tale>LegBecameDigitgrade</tale>
										</li>
										<li Class="Pawnmorph.HediffGiver_Mutation">
											<hediff>EtherClovenHoofFoot</hediff>
											<mtbDays>3</mtbDays>
											<partsToAffect>
												<li>Foot</li>
											</partsToAffect>
											<countToAffect>2</countToAffect>
										</li>
										<li Class="Pawnmorph.HediffGiver_Mutation">
											<hediff>EtherWoolySheep</hediff>
											<mtbDays>0.5</mtbDays>
											<partsToAffect>
												<li>Torso</li>
											</partsToAffect>
											<tale>StartsGrowingWool</tale>
										</li>
									</hediffGivers>
								</li>
							</stages>
						</HediffDef>
						
						<!--Partial TF-->
						<HediffDef ParentName="PartialMorphParent">
							<defName>PawnmorphSheepTFPartial</defName>
							<label>sheepmorph partial</label>
							<stages>
								<li>
									<painOffset>0.1</painOffset>
									<vomitMtbDays>1</vomitMtbDays>
									<capMods>
										<li>
											<capacity>Moving</capacity>
											<offset>-0.05</offset>
										</li>
										<li>
											<capacity>Sight</capacity>
											<offset>-0.05</offset>
										</li>
										<li>
											<capacity>Manipulation</capacity>
											<offset>-0.05</offset>
										</li>
									</capMods>
									<hediffGivers>
										<li Class="Pawnmorph.HediffGiver_Mutation">
											<hediff>EtherSheepSnout</hediff>
											<mtbDays>0.5</mtbDays>
											<partsToAffect>
												<li>Jaw</li>
											</partsToAffect>
										</li>
										<li Class="Pawnmorph.HediffGiver_Mutation">
											<hediff>EtherSheepEar</hediff>
											<mtbDays>0.5</mtbDays>
											<partsToAffect>
												<li>Ear</li>
											</partsToAffect>
											<countToAffect>2</countToAffect>
										</li>
										<li Class="Pawnmorph.HediffGiver_Mutation">
											<hediff>EtherSheepTail</hediff>
											<mtbDays>0.5</mtbDays>
											<partsToAffect>
												<li>Tail</li>
											</partsToAffect>
											<tale>GrewTail</tale>
										</li>
										<li Class="Pawnmorph.HediffGiver_Mutation">
											<hediff>EtherFurredLimb</hediff>
											<mtbDays>0.5</mtbDays>
											<partsToAffect>
												<li>Arm</li>
											</partsToAffect>
											<countToAffect>2</countToAffect>
										</li>
										<li Class="Pawnmorph.HediffGiver_Mutation">
											<hediff>EtherDigitigradeLeg</hediff>
											<mtbDays>0.5</mtbDays>
											<partsToAffect>
												<li>Leg</li>
											</partsToAffect>
											<countToAffect>2</countToAffect>
											<tale>LegBecameDigitgrade</tale>
										</li>
										<li Class="Pawnmorph.HediffGiver_Mutation">
											<hediff>EtherClovenHoofFoot</hediff>
											<mtbDays>0.5</mtbDays>
											<partsToAffect>
												<li>Foot</li>
											</partsToAffect>
											<countToAffect>2</countToAffect>
										</li>
										<li Class="Pawnmorph.HediffGiver_Mutation">
											<hediff>EtherWoolySheep</hediff>
											<mtbDays>0.5</mtbDays>
											<partsToAffect>
												<li>Torso</li>
											</partsToAffect>
											<tale>StartsGrowingWool</tale>
										</li>
									</hediffGivers>
								</li>
							</stages>
						</HediffDef>
						
						<!-- Morph Parts -->
						<HediffDef Name="SheepPart" ParentName="PawnmorphPart" Abstract="True">
							<comps>
								<li Class="Pawnmorph.Hediffs.CompProperties_MorphInfluence">
									<morph>SheepMorph</morph>
								</li>
							</comps>
						</HediffDef>
						<HediffDef ParentName="SheepPart">
							<defName>EtherWoolySheep</defName>
							<label>wooly</label>
							<description>Thick wool grows over [PAWN_nameDef]'s torso constantly. They can shave themselves, because they're a strong independent sheepmorph that don't need no man.</description>
							<maxSeverity>1</maxSeverity>
							<initialSeverity>0.01</initialSeverity>		
							<comps>
								<li Class="Pawnmorph.HediffCompProperties_Production">
									<thought>ShavedMyself</thought>
									<etherBondThought>ShavedMyselfBond</etherBondThought>
									<etherBrokenThought>ShavedMyselfBroken</etherBrokenThought>
									<stages>
										<li>
											<daysToProduce>1</daysToProduce>
											<amount>5</amount>
											<resource>AEXP_WoolSheep</resource>
										</li>
										<li>
											<daysToProduce>0.5</daysToProduce>
											<amount>4</amount>
											<resource>AEXP_WoolSheep</resource>
										</li>
										<li>
											<daysToProduce>0.25</daysToProduce>
											<amount>3</amount>
											<resource>AEXP_WoolSheep</resource>
										</li>
										<li>
											<daysToProduce>0.1</daysToProduce>
											<amount>2</amount>
											<resource>AEXP_WoolSheep</resource>
											<thought>ProductiveBliss</thought>
										</li>
									</stages>
								</li>
							</comps>
							<stages>
								<li>
									<minSeverity>0</minSeverity>
									<hungerRateFactor>1.0</hungerRateFactor>
								</li>
								<li>
									<minSeverity>0.3</minSeverity>
									<hungerRateFactor>1.3</hungerRateFactor>
									<label>productive</label>
								</li>
								<li>
									<minSeverity>0.6</minSeverity>
									<hungerRateFactor>1.6</hungerRateFactor>
									<label>very productive</label>
								</li>
								<li>
									<minSeverity>0.9</minSeverity>
									<hungerRateFactor>2.0</hungerRateFactor>
									<label>productive bliss</label>
									<hediffGivers>
										<li Class="HediffGiver_RandomDrugEffect">
											<hediff>CatatonicBreakdown</hediff>
											<minSeverity>0.50</minSeverity>
											<baseMtbDays>2</baseMtbDays>
											<partsToAffect>
												<li>Brain</li>
											</partsToAffect>
										</li>
									</hediffGivers>
								</li>
							</stages>
						</HediffDef>
						<HediffDef ParentName="SheepPart">
							<defName>EtherSheepSnout</defName>
							<label>ovine snout</label>
							<description>A snout graces [PAWN_nameDef]'s face, like that of a sheep. [PAWN_pronoun] teeth are squared off, and this makes speaking more difficult, yet eating is easier.</description>
							<stages>
								<li>
									<capMods>
										<li>
											<capacity>Talking</capacity>
											<offset>-0.40</offset>
										</li>
										<li>
											<capacity>Eating</capacity>
											<offset>0.40</offset>
										</li>
									</capMods>
								</li>
								<li>
									<minSeverity>1</minSeverity>
									<capMods>
										<li>
											<capacity>Talking</capacity>
											<offset>-0.08</offset>
										</li>
										<li>
											<capacity>Eating</capacity>
											<offset>0.40</offset>
										</li>
									</capMods>
									<label>adapted</label>
								</li>
							</stages>
							<comps>
								<li Class="HediffCompProperties_VerbGiver">
									<tools>
										<li>
											<label>teeth</label>
											<labelUsedInLogging>False</labelUsedInLogging>
											<capacities>
												<li>Bite</li>
											</capacities>
											<power>7.0</power>
											<cooldownTime>1.5</cooldownTime>
											<alwaysTreatAsWeapon>true</alwaysTreatAsWeapon>
										</li>
									</tools>
								</li>
								<li Class="Pawnmorph.Hediffs.CompProperties_MutationSeverityAdjust">
									<severityPerDay>0.25</severityPerDay>
								</li>
							</comps>
						</HediffDef>
						<HediffDef ParentName="SheepPart">
							<defName>EtherSheepEar</defName>
							<label>ovine</label>
							<description>Fluffy, ovine ears sit at the side of [PAWN_nameDef]'s head, like a sheep.</description>
							<stages>
								<li>
									<capMods>
										<li>
											<capacity>Hearing</capacity>
											<offset>0.1</offset>
										</li>
									</capMods>
								</li>
							</stages>
						</HediffDef>
						<HediffDef ParentName="SheepPart">
							<defName>EtherSheepTail</defName>
							<label>sheep tail</label>
							<description>A sheeplike tail. It's very wooly but short and not incredibly useful.</description>
						</HediffDef>
						
						<!-- Injector -->
						<ThingDef ParentName="InjectorBase">
							<defName>SheepTransformer</defName>
							<label>mutasyringe, sheep</label>
							<description>A mutagenic injector filled with mechanites and sheep DNA. Use with caution, as leaving the mechanites unchecked may transform the user.</description>
							<graphicData>
								<texPath>Things/Item/Drug/Specific</texPath>
								<graphicClass>Graphic_Single</graphicClass>
							</graphicData>
							<ingestible>
								<drugCategory>Medical</drugCategory>
								<outcomeDoers>
									<li Class="Pawnmorph.IngestionOutcomeDoer_GiveHediffRandom">
										<hediffDefs>
											<li>PawnmorphSheepTF</li>
										</hediffDefs>
										<severity>1.00</severity>
									</li>
								</outcomeDoers>
							</ingestible>	
						</ThingDef>
						
						<!-- Backgrounds -->
						<AlienRace.BackstoryDef>
							<defName>SheepmorphGeneral</defName>
							<title>farm sheep</title>
							<titleShort>sheepmorph</titleShort>
							<baseDescription>[PAWN_nameDef] was sold to a farmer with less-than-ethical business practices, and quickly made [PAWN_nameDef] part of the sheep flock. [PAWN_pronoun] escaped before being shorn, and fled with [PAWN_possessive] fleece still on [PAWN_possessive] back.</baseDescription>
							<slot>Adulthood</slot>
							<bodyTypeFemale>Female</bodyTypeFemale>
							<bodyTypeMale>Male</bodyTypeMale>
							<spawnCategories>
								<li>MutantWanderer</li>
								<li>FreeMutant</li>
							</spawnCategories>
							<modExtensions>
								<li Class="Pawnmorph.MorphPawnKindExtension">
									<hediffRange>6~8</hediffRange>
									<morphs>
										<li>SheepMorph</li>
									</morphs>
								</li>
							</modExtensions>
						</AlienRace.BackstoryDef>
					</value>				
				</li>
				
				<!-- Add the morph to the serums -->
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="RandomTransformer"]/ingestible/outcomeDoers/li/hediffDefs</xpath>
					<value>
						<li>PawnmorphSheepTF</li>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="RandomProductionTransformer"]/ingestible/outcomeDoers/li/hediffDefs</xpath>
					<value>
						<li>PawnmorphSheepTF</li>
					</value>
				</li>
				
				<!-- Add the animal to the mutagun effect -->
				<li Class="PatchOperationAdd">
					<xpath>Defs/HediffDef[defName="PawnmorphGunshotTF"]/stages/li[1]/hediffGivers/li/pawnkinds</xpath>
					<value>
						<li>AEXP_Sheep</li>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
</Patch>